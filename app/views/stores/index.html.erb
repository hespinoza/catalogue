<div class="container">
<div class="page-header">
  <h1>Tiendas</h1>
  <div class="lista">
    <% if user_signed_in? %>
      <%= link_to 'Crear Tienda', new_store_path %>
    <% end %>
  </div>
</div>


    <% @stores.each do |store| %>
      
      <div class="container col-lg-6">
        <div class="well">
          <div class="media">
            <a class="pull-left" href="#">
              <img class="media-object img-responsive" src="<%= store.logo %>" height="150" width="150">
            </a>
            <div class="media-body">
              <h3 class="media-heading"><%= store.name %></h3>
              <h5 class="text-right"><%= store.category %></h5>
              <p><%= truncate(store.description, length: 100) %></p>
              <div class="col-lg-offset-8">
                  <%= link_to 'Ver Tienda', store, class:"btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- 
        
          <td><%= link_to 'Edit', edit_store_path(store) %></td>
          <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      -->  
 
    <% end %>


<br>
</div>