<div class="container">
<div class="page-header">
  <h1>Mis Tiendas</h1>
  <div class="lista">
      <%= link_to 'Nueva Tienda', new_store_path, class:"btn btn-default" %>
  </div>
</div>


    <% @stores.each do |store| %>
      
      <div class="container col-lg-6">
        <div class="well">
          <div class="media">
            <a class="pull-left" href="#">
              <img class="media-object img-responsive" src="<%= store.logo %>" height="150" width="150">
            </a>
            <div class="media-body">
              <h3 class="media-heading"><%= store.name %></h3>
              <h5 class="text-right"><%= store.category %></h5>
              <p><%= truncate(store.description, length: 80) %></p>
              <div class="col-lg-4 col-md-2 col-sm-2 col-xs-6">
                  <%= link_to 'Ver', store, class:"btn btn-primary" %>
              </div>
              <div class="col-lg-4 col-md-2 col-sm-2 col-xs-6">
                  <%= link_to 'Editar', edit_store_path(store), class:"btn btn-warning" %>
              </div>
              <div class="col-lg-4 col-md-2 col-sm-2 col-xs-6">
                  <%= link_to 'Eliminar', store, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- 
        
          <td><%= link_to 'Edit', edit_store_path(store) %></td>
          <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
      -->  
 
    <% end %>


<br>
</div>